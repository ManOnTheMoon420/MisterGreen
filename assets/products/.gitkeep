:root{
  --bg:#0e0f10; --card:#151718; --ink:#e8e5d5;
  --muted:#a2a39b; --brand:#d2a64a; --accent:#28a46a;
  --danger:#ff5a5a; --ring:#2b2f33;
}
*{box-sizing:border-box}
html,body{margin:0;background:var(--bg);color:var(--ink);font:16px/1.5 system-ui,Segoe UI,Roboto,Arial}
img{display:block;max-width:100%}

/* Header */
.site-header{
  position:sticky;top:0;z-index:20;
  display:flex;justify-content:space-between;align-items:center;
  padding:12px 18px;border-bottom:1px solid var(--ring);
  background:rgba(14,15,16,.85);backdrop-filter: blur(6px);
}
.brand{display:flex;gap:12px;align-items:center}
.logo{width:54px;height:54px;border-radius:50%;object-fit:cover;box-shadow:0 0 18px rgba(210,166,74,.25)}
.brand-text h1{margin:0;font-size:20px;letter-spacing:.12em}
.tagline{margin:4px 0 0;color:var(--muted);font-size:12px}
.header-actions{display:flex;gap:10px;align-items:center}
.cart-btn{all:unset;cursor:pointer;background:#1d2022;border:1px solid var(--ring);padding:10px 12px;border-radius:12px}
.badge{background:var(--brand);color:#141414;font-weight:700;padding:2px 8px;border-radius:999px;margin-left:8px}
.hint{color:var(--muted);font-size:12px;border:1px solid var(--ring);padding:4px 8px;border-radius:999px}
.btn{cursor:pointer;border:1px solid var(--ring);background:#1b1e20;color:var(--ink);padding:8px 12px;border-radius:10px}

/* Layout */
.container{max-width:1100px;margin:28px auto;padding:0 16px}
.section-title{font-size:22px;margin:0 0 14px;color:var(--brand)}

/* Product Grid */
.grid{display:grid;gap:16px;grid-template-columns:repeat(auto-fit,minmax(240px,1fr))}
.card{background:var(--card);border:1px solid var(--ring);border-radius:16px;overflow:hidden;display:flex;flex-direction:column;box-shadow:0 10px 28px rgba(0,0,0,.25);transition:.2s ease}
.card:hover{transform:translateY(-2px);box-shadow:0 14px 34px rgba(0,0,0,.35)}
.card img{aspect-ratio:4/3;object-fit:cover;cursor:zoom-in}
.card-body{padding:14px;display:grid;gap:10px}
.title{display:flex;justify-content:space-between;gap:10px;align-items:flex-start}
.title h3{margin:0;font-size:16px}
.pill{font-size:12px;padding:3px 8px;border-radius:999px;border:1px solid var(--ring);color:var(--muted)}
.meta{display:flex;gap:8px;color:var(--muted);font-size:13px}
.price-stock{display:flex;justify-content:space-between;align-items:center}
.price{font-weight:800;color:var(--brand)}
.stock{font-size:13px;color:var(--muted)}
.controls{display:flex;gap:8px}
.qty{width:64px;padding:8px;border-radius:10px;border:1px solid var(--ring);background:#121314;color:var(--ink)}
.btn.primary{background:var(--accent);border-color:#1a7c51;color:#07150f;font-weight:800}
.btn:disabled{opacity:.45;cursor:not-allowed}

/* Drawer / Cart */
.drawer{
  position:fixed;inset:0 0 0 auto;width:min(420px,90vw);
  background:#101214;border-left:1px solid var(--ring);
  transform:translateX(100%);transition:.25s ease;display:flex;flex-direction:column;z-index:40
}
.drawer.open{transform:none}
.drawer-head{display:flex;justify-content:space-between;align-items:center;padding:12px 14px;border-bottom:1px solid var(--ring)}
.icon-btn{all:unset;cursor:pointer;font-size:18px;padding:6px 10px;border-radius:8px;background:#1b1f22}
.drawer-body{padding:10px 12px;flex:1;overflow:auto;display:grid;gap:10px}
.cart-row{display:grid;grid-template-columns:64px 1fr auto;gap:10px;align-items:center;border:1px solid var(--ring);border-radius:12px;background:#141618;padding:8px}
.cart-row img{width:64px;height:64px;object-fit:cover;border-radius:10px}
.drawer-foot{border-top:1px solid var(--ring);padding:12px;display:grid;gap:10px}
.total{display:flex;justify-content:space-between;align-items:center}
.primary{padding:12px;border-radius:12px;background:var(--brand);color:#141414;font-weight:800;border:0}
.note{margin:0;color:var(--muted);font-size:12px;text-align:center}

/* Lightbox */
.lightbox{position:fixed;inset:0;display:none;align-items:center;justify-content:center;z-index:60}
.lightbox.show{display:flex}
.lightbox-backdrop{position:absolute;inset:0;background:rgba(0,0,0,.6)}
#lightboxImg{position:relative;max-width:92vw;max-height:88vh;border:1px solid var(--ring);border-radius:12px;box-shadow:0 20px 60px rgba(0,0,0,.55)}
.lightbox-close{position:absolute;top:16px;right:16px;all:unset;cursor:pointer;background:#1b1f22;border:1px solid var(--ring);color:var(--ink);padding:8px 10px;border-radius:10px}

/* Success Modal */
.modal{position:fixed;inset:0;display:none;align-items:center;justify-content:center;background:rgba(0,0,0,.55);z-index:70}
.modal.show{display:flex}
.modal-card{background:#121416;border:1px solid var(--ring);border-radius:16px;padding:20px;max-width:420px;width:92vw;text-align:center}
.modal-card h3{margin:0 0 6px;color:#e8dc9c}
.modal-card p{color:#c2b678;margin:0 0 14px}

/* Toast */
.toast{
  pointer-events:none;position:fixed;left:50%;bottom:22px;transform:translateX(-50%) translateY(20px);
  background:#111;border:1px solid var(--ring);color:var(--ink);padding:10px 14px;border-radius:10px;
  opacity:0;transition:.25s ease;z-index:80
}
.toast.show{opacity:1;transform:translateX(-50%) translateY(0)}

/* Small screens */
@media (max-width:480px){
  .brand-text h1{font-size:18px}
  .section-title{font-size:20px}
}
